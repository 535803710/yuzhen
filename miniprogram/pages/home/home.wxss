/* miniprogram/pages/home/home.wxss */

@import "./home.skeleton.wxss";

.avatar-box {
  display: flex;
  /* padding: 10rpx 0; */
  /* justify-content: space-between; */
  flex-wrap: wrap;
  overflow: auto;
  padding: 2rpx;
}

.avatar-image-item {
  width: 245rpx;
  height: 245rpx;
  overflow: hidden;
  margin: 2rpx;
  position: relative;
}
.avatar-image {
  width: 250rpx;
  height: 250rpx;
  overflow: hidden;
}

.desc {
  text-align: center;
  color: #666;
  font-size: 20rpx;
  margin-bottom: 20rpx;
}

.uploader {
  display: flex;
  position: fixed;
  bottom: 120rpx;
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
  background-color: rgb(255, 255, 255);
  justify-content: center;
  right: 40rpx;
  font-size: 26rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #2c61b4;
}
.uploader text {
  margin-top: 10rpx;
}

.swiper {
  width: 750rpx;
  height: 750rpx;
  overflow: hidden;
}

.swiper-item {
  width: 750rpx;
  height: 750rpx;
  overflow: hidden;
}

.delete {
  position: absolute;
  top: 0;
  left: 0;
  padding: 10rpx;
  background-color: rgba(0, 0, 0, 0.527);
}

.swiper-item image {
  width: 750rpx;
}

.title {
  height: 100rpx;
  text-align: center;
  line-height: 100rpx;
}

.readRule {
  display: flex;
  justify-content: center;
  margin-top: 20rpx;
}

.deleteImg {
  position: absolute;
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;
  background-color: rgba(255, 0, 0, 0.527);
}

.operation {
  position: absolute;
  z-index: 999;
  color: #fff;
}

.album {
  position: absolute;
  top: 0;
  right: 0;
  padding: 10rpx;
  border-bottom-left-radius: 50%;
  background-image: linear-gradient(
    to top right,
    rgba(0, 0, 0, 0),
    rgba(0, 0, 0, 0.109),
    rgba(0, 0, 0, 0.555)
  );
  /* filter: blur(20rpx) */
}

.album image {
  width: 40rpx;
  height: 40rpx;
}

.like{
  position: absolute;
  bottom: 0;
  right: 0;
  padding: 10rpx;

}
.like image{
  width: 40rpx;
  height: 40rpx;
}